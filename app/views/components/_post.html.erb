<div class="post post-container">
  <%= render 'components/post_header', post: post %>
  <div>
    <% if post.photo_url.present? %>
      <%= image_tag post.photo_url,
      height: 100,
      width: 150 %>
    <% elsif post.photo.attached? %>
      <%= cl_image_tag post.photo.key,
      height: 100,
      width: 150 %>
    <% end %>
    <p>
      <%= post.content %>
    </p>
  </div>
  <%= render 'components/post_footer', post: post %>
  <!-- this will we filled by the new reply form called in the _post_footer -->
  <%= turbo_frame_tag "new-reply-post-#{post.id}" %>
</div>
