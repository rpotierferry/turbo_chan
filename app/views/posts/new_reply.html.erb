<%= turbo_frame_tag "new-reply-post-#{@post.id}" do %>
  <%= form_with(model: [@board, @thread, @post, @reply],
  url:  create_reply_board_board_thread_post_path(@board, @thread, @post),
  html: {class: "form-container"}) do |f| %>
    <%= f.label "Content" %>
    <%= f.text_area :content %>
    <%= f.label "Upload a picture" %>
    <%= f.file_field :photo %>
    <%= f.label "Add a link to a photo" %>
    <%= f.text_field :photo_url %>
    <%= f.submit %>
  <% end %>
<% end %>
