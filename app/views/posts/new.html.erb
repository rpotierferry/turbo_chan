<main>
  <%= form_with(model: [@board, @thread, @post],
  url: board_board_thread_posts_path(@board, @thread)) do |f| %>
    <%= f.label "Content" %>
    <%= f.text_area :content %>
    <%= f.label "Upload a picture" %>
    <%= f.file_field :photo %>
    <%= f.label "Add a link to a photo" %>
    <%= f.text_field :photo_url %>
    <%= f.submit %>
  <% end %>
</main>
